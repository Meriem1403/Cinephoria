<section id="movies"
         class="relative px-4 sm:px-6 md:px-10 lg:px-16 py-16 sm:py-20 md:py-16 bg-[#F5F6FA] overflow-hidden">

    {% if withGradientTop %}
        <div class="absolute top-0 left-0 w-full h-24 sm:h-28 md:h-32 z-10 pointer-events-none"
             style="background: linear-gradient(to bottom, #ffffff, rgba(255,255,255,0));">
        </div>
    {% endif %}

    {% if withGradientBottom %}
        <div class="absolute bottom-0 left-0 w-full h-24 sm:h-28 md:h-32 z-10 pointer-events-none"
             style="background: linear-gradient(to top, #ffffff, rgba(255,255,255,0));">
        </div>
    {% endif %}

    <div class="relative z-20">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-semibold text-gray-900 mb-8">
            {{ title }}
        </h2>

        <div class="swiper">
            <div class="swiper-wrapper">
                {% for movie in movies %}
                    <div class="swiper-slide">
                        <div class="group text-center transition-transform duration-300 ease-in-out hover:scale-105 py-4">
                            <img src="{{ asset(movie.pictures) }}"
                                 alt="{{ movie.title }}"
                                 class="w-full h-[260px] sm:h-[300px] md:h-[350px] lg:h-[400px] object-cover rounded-md shadow-md mx-auto" />
                            <p class="mt-2 text-base sm:text-lg text-gray-900 font-medium group-hover:font-semibold transition">
                                {{ movie.title }}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</section>

