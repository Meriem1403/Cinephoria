<section id="movies"
         class="relative px-4 sm:px-6 md:px-10 lg:px-16 py-8 sm:py-10 md:py-8 bg-white/70 overflow-hidden">

    {% if withGradientTop %}
        <div class="absolute top-0 left-0 w-full h-24 sm:h-28 md:h-32 z-10 pointer-events-none"
             style="background: linear-gradient(to bottom, #FFFFFF, rgba(255,255,255,0));">
        </div>
    {% endif %}

    {% if withGradientBottom %}
        <div class="absolute bottom-0 left-0 w-full h-24 sm:h-28 md:h-80 z-10 pointer-events-none"
             style="background: linear-gradient(to top, black, #FFFFFF);">
        </div>
    {% endif %}

    <div class="relative z-20">
        <h2 class="text-4xl font-bold mb-5 bg-black drop-shadow-[0_0_4px_rgba(255,255,255,0.5)] text-transparent bg-clip-text">
            {{ title }}
        </h2>

        <div class="swiper">
            <div class="swiper-wrapper">
                {% for movie in movies %}
                    <div class="swiper-slide">
                        <div class="group text-center transition duration-300 ease-in-out hover:scale-105 py-4">
                            <img src="{{ asset('pictures/films/' ~ movie.posterUrl) }}"
                                 alt="{{ movie.title }}"
                                 class="w-[160px] sm:w-[180px] md:w-[200px] lg:w-[220px]
                                        h-[240px] sm:h-[270px] md:h-[300px] lg:h-[330px]
                                        object-cover rounded-xl shadow-md mx-auto" />
                            <p class="mt-4 text-base sm:text-lg font-medium group-hover:font-semibold transition
                                {{ withGradientBottom ? 'text-white' : 'text-gray-900' }}">
                                {{ movie.title }}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</section>
