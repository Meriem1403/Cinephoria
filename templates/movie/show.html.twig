{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }} – Séances{% endblock %}

{% block body %}
    <section class="px-6 md:px-12 py-10">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl font-bold mb-4">{{ movie.title }}</h1>
            <p class="text-gray-600 mb-6">
                {{ movie.genre|join(', ') }} – {{ movie.duration }} min
            </p>

            {% for cinema, dates in groupedShowtimes %}
                <div class="mb-8">
                    <h2 class="text-2xl font-semibold text-blue-900 mb-2">{{ cinema }}</h2>

                    {% for date, showtimes in dates %}
                        <div class="mb-4">
                            <h3 class="text-lg font-semibold text-gray-700 mb-1">
                                {{ date|date("D")|upper }} {{ date|date("d") }} {{ date|date("M") }}
                            </h3>

                            <div class="flex flex-wrap gap-3">
                                {% for showtime in showtimes %}
                                    <a href="{{ path('app_login') }}"
                                       class="px-4 py-2 bg-blue-100 text-blue-800 rounded hover:bg-blue-200 transition">
                                        {{ showtime.startTime|date('H:i') }} – {{ showtime.chosenLanguage }}
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
