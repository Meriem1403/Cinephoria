{% extends 'base.html.twig' %}

{% block title %}Cinemas — Cinéphoria{% endblock %}

{% block body %}
    {% include 'partials/_header.html.twig' %}

    <section class="cinema-page">
        <h1 class="cinema-title">Our Cinemas</h1>

        {% if cinemas|length > 0 %}
            <div class="swiper cinema-swiper">
                <div class="swiper-wrapper">
                    {% for cinema in cinemas %}
                        <div class="swiper-slide">
                            <div class="cinema-card">
                                <h2 class="cinema-name">{{ cinema.name }}</h2>
                                <p class="cinema-info"><strong>City:</strong> {{ cinema.city }}</p>
                                <p class="cinema-info"><strong>Address:</strong> {{ cinema.address }}</p>
                                <p class="cinema-info"><strong>Postal Code:</strong> {{ cinema.postalCode }}</p>
                                <p class="cinema-info"><strong>Country:</strong> {{ cinema.country }}</p>
                                <p class="cinema-info"><strong>Phone:</strong> {{ cinema.phone }}</p>
                                <p class="cinema-info"><strong>Email:</strong> {{ cinema.email }}</p>

                                <a href="{{ path('home', { id: cinema.id }) }}" class="cinema-link">
                                    View showtimes
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        {% else %}
            <p class="cinema-empty">No cinemas found.</p>
        {% endif %}
    </section>
{% endblock %}
