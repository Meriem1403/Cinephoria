{% extends 'base.html.twig' %}

{% block title %}Leave a Review – {{ movie.title }}{% endblock %}

{% block body %}
    <section class="min-h-screen bg-gray-100 pt-24 pb-12 px-4">
        <div class="max-w-xl mx-auto bg-white rounded-xl shadow-lg p-8">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">
                Leave a review for <span class="text-indigo-600">{{ movie.title }}</span>
            </h1>

            {{ form_start(form) }}

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Your rating</label>
                <div class="flex gap-4">
                    {% for choice in form.rating %}
                        <label class="inline-flex items-center space-x-2 text-sm text-gray-800">
                            {{ form_widget(choice) }}
                            <span>{{ choice.vars.label }}</span>
                        </label>
                    {% endfor %}
                </div>
                {{ form_errors(form.rating) }}
            </div>

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Your comment <span class="text-gray-400">(optional)</span></label>
                {{ form_widget(form.comment, { attr: {
                    class: 'w-full border border-gray-300 rounded px-3 py-2 text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent',
                    placeholder: 'Write your review here...'
                } }) }}
                {{ form_errors(form.comment) }}
            </div>

            <div class="text-right">
                <button type="submit"
                        class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2 rounded-full shadow transition">
                    Submit review →
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
